{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm run --parallel \"/dev:*/\"",
		"dev:app": "vite build --watch",
		"dev:scripts": "rollup -cw",
		"run:firefox": "web-ext run --source-dir=./debug/ --firefox=\"C:\\Program Files\\Firefox Developer Edition\\firefox.exe\"",
		"build": "rollup -c && pnpm run --parallel \"/build:*/\"",
		"build:chrome": "vite build --outDir=build/chrome",
		"build:firefox": "vite build --outDir=build/firefox",
		"format": "prettier -w .",
		"check": "pnpm run --parallel \"/check:*/\"",
		"check:style": "prettier -c .",
		"check:svelte": "svelte-check --tsconfig ./tsconfig.json"
	},
	"packageManager": "pnpm@8.14.3",
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@types/chrome": "^0.0.258",
		"@types/node": "^20.11.6",
		"prettier": "^3.2.4",
		"prettier-plugin-sort-package-json": "^0.2.0",
		"prettier-plugin-svelte": "^3.1.2",
		"rollup": "^4.9.6",
		"svelte": "^4.2.9",
		"svelte-check": "^3.6.3",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"web-ext": "^7.11.0"
	}
}
